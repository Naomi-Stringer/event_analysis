<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            path: root.start_path
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.selection[0])

<SaveDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserListView:
            id: filechooser
            on_selection: text_input.text = self.selection and self.selection[0] or self.path
            on_entry_added: text_input.text = self.path or ''
        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()
            Button:
                text: "Save"
                on_release: root.save(text_input.text)


<Row@GridLayout>
    orientation: 'horizontal'
    cols: 4
    size_hint_x: None
    width: 500
    Label:
        text: ''
        size_hint_x: None
        width: 40
    TextInput:
        id: text_box
        size_hint_x: None
        width: 600
    Button:
        text: '...'
        size_hint_x: None
        width: 50
        on_release: root.parent.choose_file(root.id, root)
    Button:
        text: 'x'
        size_hint_x: None
        width: 50
        on_release: root.parent.remove_data_source(root.id)

<SubSetLoader@GridLayout>
